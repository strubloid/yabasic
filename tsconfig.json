{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "declaration": true,
        "outDir": "./build",
        "baseUrl": "./build",
        "strict": true,
        "paths": {
            "components": ["src/components/*"]
        },
        "types": [
            "node",
        ]
    },
    "include": [
        "src/**/**/*"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}