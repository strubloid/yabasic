{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Ya Basic Node 18",
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "commonjs",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "paths": {
            "components": ["src/components/*"]
        }
    },
    "include": [
        "src/**/**/*"
    ],
    "exclude": [
        "lib",
        "node_modules"
    ]
}