{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "components": ["components/*"],
    }
  },
  "include": [
    "components/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}