{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "removeComments": true,
        "sourceMap": false,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "Node"
    },
    "include": ["src/**/*.ts"]
}